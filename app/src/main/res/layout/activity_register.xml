<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/EmailRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passwordregister"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Your Email Address"
        android:inputType="textEmailAddress"
        android:scrollbars="horizontal" />

    <EditText
        android:id="@+id/Usernameregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passwordregister"
        android:layout_alignTop="@+id/EmailRegister"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Your UserName here"
        android:inputType="none"
        android:scrollbars="horizontal" />

    <EditText
        android:id="@+id/passwordregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Usernameregister"
        android:layout_marginStart="104dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Your PassWord here"
        android:inputType="none"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="73dp"
        android:scrollbars="horizontal" />

    <Button
        android:id="@+id/confirmRegister"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/passwordregister"
        android:layout_alignRight="@+id/passwordregister"
        android:layout_alignTop="@+id/passwordregister"
        android:layout_marginTop="90dp"
        android:text="Create new account"
        android:textStyle="bold"
        android:background="@drawable/button_style4"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="384dp" />



</RelativeLayout>