<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img2"
    tools:context="fall18_207project.GameCenter.MatchingCardsGameActivity">

    <fall18_207project.GameCenter.GestureDetectGridView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        tools:context="fall18_207project.GameCenter.MatchingCardsGameActivity">


    </fall18_207project.GameCenter.GestureDetectGridView>


    <TextView
        android:id="@+id/time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:layout_toStartOf="@+id/StartMatchButton"
        android:text="Time:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#cdcc4f79" />

    <TextView
        android:id="@+id/steps_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="37dp"
        android:layout_toStartOf="@+id/time_id"
        android:text="Steps:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#cdcc4f79" />

    <Button
        android:id="@+id/StartMatchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grid"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/border_style"
        android:padding="1dp"
        android:text="Start" />

    <Button
        android:id="@+id/saveGameButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/save_button"
        />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:layout_toStartOf="@+id/steps_id"
        android:background="@drawable/reset_button"/>

</RelativeLayout>